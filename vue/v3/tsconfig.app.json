{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["src/**/*", "src/**/*.vue", "types/*.d.ts"],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",

    "paths": {
      "@/*": ["./src/*"],
      "@play/*": ["./src/pages/play/*"],
      // "@element/*": ["./src/pages/element/*"],
      "@vuetify/*": ["./src/pages/vuetify/*"],
      "@i18n/*": ["./src/pages/i18n/*"]
    }
  }
}
