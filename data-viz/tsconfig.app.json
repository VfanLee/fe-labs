{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["src/**/*", "src/**/*.vue", "types/*.d.ts"],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",

    "paths": {
      "@/*": ["./src/*"],
      "@canvas/*": ["./src/pages/canvas*"],
      "@svg/*": ["./src/pages/svg*"],
      "@echarts/*": ["./src/pages/echarts*"],
      "@three/*": ["./src/pages/three*"],
      "@zrender/*": ["./src/pages/zrender*"],
      "@d3/*": ["./src/pages/d3*"]
    }
  }
}
